            <AnchorPane prefHeight="274.0" prefWidth="440.0">
               <children>
                  <Label layoutX="169.0" layoutY="14.0" text="Add a movie">
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtMovieName" layoutX="195.0" layoutY="68.0" promptText="Movie name..." />
                  <Label layoutX="98.0" layoutY="72.0" text="Movie name:" />
                  <Label layoutX="100.0" layoutY="137.0" text="Category:" />
                  <Button layoutX="120.0" layoutY="234.0" mnemonicParsing="false" onAction="#onCancelButtonClicked" text="Cancel" />
                  <Button layoutX="244.0" layoutY="234.0" mnemonicParsing="false" onAction="#onAddButtonClicked" prefHeight="25.0" prefWidth="51.0" text="Add" />
                  <TextField fx:id="txtMovieRating" layoutX="195.0" layoutY="98.0" prefHeight="25.0" prefWidth="56.0" promptText="Rating.." />
                  <Label layoutX="101.0" layoutY="102.0" text="Rating:" />
