                  <Button fx:id="btnChooseFile" onAction="#onChooseFileClicked" layoutX="288.0" layoutY="167.0" mnemonicParsing="false" text="Choose" />
                  <Button fx:id="btnChooseCategory" layoutX="194.0" layoutY="133.0" mnemonicParsing="false" onAction="#onChooseCategoryButtonClicked" text="Choose" />
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </children>
</Pane>
