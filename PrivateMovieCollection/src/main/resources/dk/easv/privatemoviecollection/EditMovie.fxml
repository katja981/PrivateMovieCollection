<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<Pane fx:controller="GUI.Controllers.EditMovieController" prefHeight="274.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox fx:id="popupMovie" layoutX="-3.0" layoutY="-2.0" prefHeight="274.0" prefWidth="440.0">
            <children>
                <AnchorPane prefHeight="274.0" prefWidth="440.0">
                    <children>
                        <Label fx:id="lblTitle" layoutX="169.0" layoutY="14.0" text="Edit a movie">
                            <font>
                                <Font name="System Bold" size="17.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtMovieName" layoutX="195.0" layoutY="68.0" promptText="Movie name..." />
                        <Label layoutX="98.0" layoutY="72.0" text="Movie name:" />
                        <Label layoutX="100.0" layoutY="137.0" text="Category:" />
                        <Button layoutX="120.0" layoutY="234.0" mnemonicParsing="false" text="Cancel" onAction="#onCancelButtonClicked" />
                        <Button fx:id="btnSave" layoutX="244.0" layoutY="234.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="51.0" text="Save" onAction="#onSaveButtonClicked"/>
                        <TextField fx:id="txtMovieRating" layoutX="195.0" layoutY="98.0" prefHeight="25.0" prefWidth="56.0" promptText="Rating..." />
                        <Label layoutX="101.0" layoutY="102.0" text="Rating:" />
                        <Label layoutX="101.0" layoutY="171.0" text="Link:" />
                        <TextField fx:id="txtFilePath" layoutX="132.0" layoutY="167.0" />
                        <Button onAction="#onChooseFileClicked" fx:id="btnChooseFile" layoutX="288.0" layoutY="167.0" mnemonicParsing="false" text="Choose" />
                        <Button onAction="#onChooseCategoryButtonClicked" fx:id="btnChooseCategory" layoutX="194.0" layoutY="133.0" mnemonicParsing="false" text="Choose" />
                    </children>
                </AnchorPane>
            </children>
        </VBox>
    </children>
</Pane>